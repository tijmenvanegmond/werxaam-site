doctype html
html
  head
    block options
    meta(charset='utf-8')
    meta(name='keywords', content='zorgboederij, lelystad, hout, openhaardhout')
    link(rel='stylesheet', type='text/css', href='./stylesheet.css')
    title Stichting Werxaam - #{title}
    script(src="./toggle-nav.js")
     
  body   
    .wrapper
      .button(class="toggle" id="toggler" onclick="toggleNav()")
        img(id='nav-arrow-left' src="./arrow-left.svg" height=64 width=64)
        img(id='nav-arrow-right' src="./arrow-right.svg" height=64 width=64)
      nav.side( id = "nav")
        .logo
          a(class={selected: name === 'index'} href='./index.html')
            img(src='./Logo2020.png' loading='lazy')        
        a(class={selected: name === 'dagbesteding'} href='./dagbesteding.html') Dagbesteding
        a(class={selected: name === 'onderhoud'} href='./onderhoud.html') Onderhoud
        a(class={selected: name === 'products'} href='./products.html') Verkoop
        a(class={selected: name === 'contact'} href='./contact.html') Contact            
      .container
        block container
        .padder